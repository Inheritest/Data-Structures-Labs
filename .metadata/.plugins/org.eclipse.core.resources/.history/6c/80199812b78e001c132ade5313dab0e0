import java.util.Scanner;
public class BabyLinkedList 
{

	public static void main(String args[])
	{
		//start of program
		LinkedList apple = new LinkedList();
		apple.buildSimpleList(10);
		apple.showList();
		
		
		//user input section
		int answer;
		int nodeLocation;
		boolean loop = true;
		Scanner input = new Scanner(System.in);
		LinkedList userList = new LinkedList();
		System.out.print("How long do you want your list to be? ");
		userList.buildSimpleList(input.nextInt());
		userList.showList();
		
		System.out.println("Your list: ");
		userList.showList();
		
		while(loop)
		{
		System.out.println("What would you like to do?");
		System.out.println("1. Add a node after a specific value.");
		System.out.println("2. Add a node to the front of the list.");
		System.out.println("3. Add a node to the back of the list.");
		System.out.println("4. Delete a node of a specific value.");
		System.out.println("5. End program.");
		System.out.print("Your answer: ");
		answer = input.nextInt();
		
		
			if(answer == 1)
			{
				System.out.print("What node would you like to add after? ");
				nodeLocation = input.nextInt();
				System.out.print("What value would your new node to be? ");
				answer = input.nextInt();
				userList.insertAfter(answer, nodeLocation);
				System.out.println();
			}
			else if(answer == 2)
			{
				System.out.print("What value would your new node to be? ");
				answer = input.nextInt();
				userList.insertAtFront(answer);
				System.out.println();
			}	
			else if(answer == 3)
			{
				System.out.print("What value would your new node to be? ");
				answer = input.nextInt();
				userList.insertAtBack(answer);
				System.out.println();
			}	
			else if(answer == 4)
			{
				System.out.print("What value node would you like to delete? ");
				answer = input.nextInt();
				userList.delete(answer);
				System.out.println();
			}	
			else if(answer == 5)
			{
				loop = false;
			}	
			
			System.out.println("Your list: ");
			userList.showList();
		}
	}
}
